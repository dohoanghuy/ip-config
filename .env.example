# IP Monitor Service Configuration

# Required Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Optional Configuration with defaults

# Monitoring Settings
CHECK_INTERVAL_MS=3600000
IP_CHECK_TIMEOUT=30000
MAX_RETRIES=3

# Telegram Settings
TELEGRAM_TIMEOUT=30000
TELEGRAM_RETRY_ATTEMPTS=3

# Git Settings
GIT_COMMIT_ENABLED=true
GIT_AUTO_COMMIT=true
GIT_MAX_RETRIES=3
GIT_TIMEOUT=60000

# GitHub Settings (for remote IP comparison)
GITHUB_OWNER=dohoanghuy
GITHUB_REPO=ip-config
GITHUB_BRANCH=main

# Server Settings
PORT=3000
HOST=0.0.0.0
HEALTH_CHECK=true

# Rate Limiting
NOTIFICATION_RATE_WINDOW=60000
MAX_NOTIFICATIONS_PER_WINDOW=5
DEBOUNCE_DELAY=5000

# Logging
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=logs/ip-monitor.log

# Paths
IP_CONFIG_PATH=src/config/ip.json

# Environment
NODE_ENV=production